generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") 
}

model Conversion {
  id              Int         @id @default(autoincrement())
  amount          Decimal     @db.Decimal(18, 2)
  baseCurrency    String      @map("base_currency") @db.VarChar(3)
  targetCurrency  String      @map("target_currency") @db.VarChar(3)
  convertedAmount Decimal     @map("converted_amount") @db.Decimal(18,2)
  conversionRate  Decimal     @map("conversion_rate") @db.Decimal(18,6)
  createdAt       DateTime    @default(now()) @map("created_at")
  reasonId        Int?      
  reason          Reason?     @relation(fields: [reasonId], references: [id])
  @@map("conversions")
}

model Reason {
  id          Int          @id @default(autoincrement())
  label       String       // e.g. "Business Expense"
  conversions Conversion[] // The reverse relation
  @@map("reasons")
}